<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aca.andrewott.tagd.ActivityMain"
    android:background="#3a3a3a">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_above="@+id/btnAboutUs"
        android:layout_alignParentStart="true"
        android:layout_height="175dp" android:id="@+id/relativeLayout">


        <Button
            android:id="@+id/btnSearchGT"
            android:text="Search GamerTag"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_width="175dp"
            android:layout_height="55dp"
            android:background="@drawable/buttonshape3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"/>
        <Button
            android:text="Recents"
            android:id="@+id/btnRecents"
            android:background="@drawable/buttonshape3"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_width="175dp"
            android:layout_height="55dp" android:layout_alignBaseline="@+id/btnSearchGT"
            android:layout_alignBottom="@+id/btnSearchGT" android:layout_alignParentEnd="true"/>
        <EditText
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextGT"
            android:textSize="24sp"
            android:textStyle="normal|italic"
            android:textColor="@color/white"
            android:padding="10dp"
            android:background="@drawable/textfield_shape_greyandgreen"
            android:layout_height="55dp"
            android:layout_marginBottom="19dp" android:layout_above="@+id/btnSearchGT"
            android:layout_alignParentStart="true" android:hint="@string/enterGT"
            android:textColorHint="@android:color/darker_gray" android:textAlignment="textStart"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/btnAboutUs"
        android:textSize="14sp"
        android:background="@drawable/buttonshape3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/tagdProject" android:textColor="@color/white"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/tagdlogo"
        android:id="@+id/imgTAGDLogo"
        android:layout_marginTop="17dp" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:text="LOGOUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mLogoutBtn"
        android:background="@color/backgroundGrey"
        android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
</RelativeLayout>
