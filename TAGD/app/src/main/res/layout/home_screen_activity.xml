<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/backgroundGrey">

    <ImageView
        app:srcCompat="@mipmap/tagdlogo"
        android:id="@+id/imageView"
        android:adjustViewBounds="false"
        android:layout_marginTop="53dp" android:cropToPadding="true"
        android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
        android:layout_width="200dp" android:layout_height="200dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp" android:padding="10dp"
        android:layout_alignParentBottom="true" android:layout_alignParentStart="true">

        <Button
            android:text="@string/signIn"
            android:layout_width="175dp"
            android:layout_height="55dp" android:id="@+id/btnSignIn1"
            android:background="@drawable/buttonshape3"
            android:layout_alignParentTop="true" android:layout_toStartOf="@+id/gamerText"
            android:layout_marginEnd="14dp" android:textColor="@color/white"
            android:onClick="sendMessage"/>
        <Button
            android:text="@string/signUp"
            android:layout_width="175dp"
            android:layout_height="55dp" android:id="@+id/btnSignUp1"
            android:background="@drawable/buttonshape3" android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:layout_alignParentTop="true" android:layout_toEndOf="@+id/btnSignIn1"
            android:layout_marginStart="36dp"/>
    </RelativeLayout>
</RelativeLayout>