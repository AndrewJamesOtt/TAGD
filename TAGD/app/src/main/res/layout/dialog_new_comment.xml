<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:id="@+id/mNewCommentLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/commentTextView" android:padding="10sp" android:textSize="24sp"
        android:layout_margin="10sp" android:background="@drawable/textfield_shape_greyandgreen"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameTextView"
        android:layout_marginLeft="10sp" android:layout_marginRight="10sp"
        android:textSize="18sp" android:layout_below="@+id/commentTextView"
        android:layout_alignEnd="@+id/commentTextView" android:layout_marginEnd="8dp"
        android:textColor="@color/white" />
</RelativeLayout>