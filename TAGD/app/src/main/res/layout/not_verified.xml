<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/backgroundGrey"
                android:onClick="signUp">

    <Button
        android:text="@string/reverify"
        android:layout_width="175dp"
        android:layout_height="55dp" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" android:layout_marginBottom="64dp"
        android:id="@+id/btnVerify" android:background="@drawable/buttonshape2"
        android:textColor="@color/white"/>
    <TextView
        android:text="@string/notVerified"
        android:layout_height="wrap_content"
        android:id="@+id/notVerifiedText" android:textAlignment="center" android:textSize="32sp"
        android:layout_width="350dp"
        android:textColor="@color/white" android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" android:fontFamily="sans-serif"/>
    <ImageView
        android:layout_height="100dp" app:srcCompat="@mipmap/android_robot_two"
        android:layout_marginTop="42dp" android:id="@+id/imageView2" android:layout_width="100dp"
        android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>