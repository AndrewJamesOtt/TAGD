<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" app:srcCompat="@mipmap/tagdlogo"
        android:id="@+id/imageTAGD"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true" android:padding="85dp"/>
    <TextView
        android:text="@string/verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/editVerification"
        android:layout_centerHorizontal="true" android:layout_marginTop="7dp"
        android:id="@+id/textViewVerification" android:textColor="@android:color/darker_gray"/>
    <EditText
        android:layout_height="55dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editVerification" android:textSize="36sp"
        android:background="@color/white" android:layout_below="@+id/imageTAGD"
        android:layout_centerHorizontal="true" android:text="143652"
        android:textColor="@color/darkGrey" android:textAlignment="center"
        android:layout_width="175dp"/>
    <Button
        android:text="@string/verify"
        android:layout_height="55dp"
        android:layout_marginTop="14dp"
        android:id="@+id/btnSendVerification"
        android:textAllCaps="false" android:layout_below="@+id/textViewVerification"
        android:layout_centerHorizontal="true" android:layout_width="175dp"
        android:textColor="@color/white" android:background="@drawable/buttonshape3"/>
</RelativeLayout>