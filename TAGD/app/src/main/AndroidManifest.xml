<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.aca.andrewott.tagd">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tagdlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable"/>
        <activity
            android:name=".HomeScreenActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"/>

                <category
                    android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity android:name=".ActivityMain"/>
        <activity android:name=".SearchGT"/>
        <activity android:name=".SignInActivity"/>
        <activity android:name=".SignUpActivity"/>
        <activity android:name=".SeeAllComments"/>
        <activity android:name=".AboutTAGD"/>
        <activity android:name=".RecentGT"/>
        <activity android:name=".SelectedGT"/>
    </application>

</manifest>